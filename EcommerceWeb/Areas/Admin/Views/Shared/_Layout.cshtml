<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/solid.min.css">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/admin/css/style.css">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdn.tiny.cloud/1/mxc67ijc519t9c2wwsz9yx9imziqs8jh1hcs74wf396ytzwt/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <title>@ViewBag.Title</title>
</head>

<body>
    <div id="warpper" class="nav-fixed">
        <nav class="topnav shadow navbar-light bg-white d-flex">
            <div class="navbar-brand"><a href="?">ADMIN</a></div>
            <div class="nav-right ">
                <div class="btn-group mr-auto">

                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
        <!-- end nav  -->
        <div id="page-body" class="d-flex">
            <div id="sidebar" class="bg-white">
                <ul id="sidebar-menu">
                    <li class="nav-link">
                        <a href="?view=dashboard">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Dashboard
                        </a>
                        <i class="arrow fas fa-angle-right"></i>
                    </li>
                    <li class="nav-link">
                        <a asp-area="admin" asp-controller="page" asp-action="index">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Trang
                        </a>
                        <i class="arrow fas fa-angle-right"></i>

                        <ul class="sub-menu">
                            <li><a asp-area="admin" asp-controller="page" asp-action="create">Thêm mới</a></li>
                            <li><a asp-area="admin" asp-controller="page" asp-action="index">Danh sách</a></li>
                        </ul>
                    </li>
                    <li class="nav-link">
                        <a asp-area="admin" asp-controller="slide" asp-action="index">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Slide
                        </a>
                        <i class="arrow fas fa-angle-right"></i>
                        <ul class="sub-menu">
                            <li><a asp-area="admin" asp-controller="slide" asp-action="create">Thêm mới</a></li>
                            <li><a asp-area="admin" asp-controller="slide" asp-action="index">Danh sách</a></li>
                        </ul>
                    </li>
                    <li class="nav-link">
                        <a asp-area="admin" asp-controller="post" asp-action="index">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Bài viết
                        </a>
                        <i class="arrow fas fa-angle-right"></i>
                        <ul class="sub-menu">
                            <li><a asp-area="admin" asp-controller="post" asp-action="create">Thêm bài viết</a></li>
                            <li><a asp-area="admin" asp-controller="post" asp-action="index">Danh sách bài viết</a></li>
                            <li><a asp-area="admin" asp-controller="postcat" asp-action="index">Danh sách danh mục</a></li>
                            <li><a asp-area="admin" asp-controller="postcat" asp-action="create">Thêm danh mục</a></li>
                        </ul>
                    </li>
                    <li class="nav-link">
                        <a asp-area="admin" asp-controller="product" asp-action="index">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Sản phẩm & Danh Mục
                        </a>
                        <i class="arrow fas fa-angle-down"></i>
                        <ul class="sub-menu">
                            <li><a asp-area="admin" asp-controller="product" asp-action="create">Thêm sản phẩm</a></li>
                            <li><a asp-area="admin" asp-controller="product" asp-action="index">Danh sách sản phẩm</a></li>
                            <li><a asp-area="admin" asp-controller="productcat" asp-action="index">Danh sách danh mục</a></li>
                            <li><a asp-area="admin" asp-controller="productcat" asp-action="create">Thêm danh mục</a></li>
                        </ul>
                    </li>
                    <li class="nav-link">
                        <a asp-area="admin" asp-controller="user" asp-action="index">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Bán hàng
                        </a>
                        <i class="arrow fas fa-angle-right"></i>
                        <ul class="sub-menu">
                            <li><a asp-area="admin" asp-controller="order" asp-action="index">Đơn hàng</a></li>
                        </ul>
                    </li>
                    <li class="nav-link">
                        <a asp-area="admin" asp-controller="user" asp-action="index">
                            <div class="nav-link-icon d-inline-flex">
                                <i class="far fa-folder"></i>
                            </div>
                            Users
                        </a>
                        <i class="arrow fas fa-angle-right"></i>

                        <ul class="sub-menu">
                            <li><a asp-area="admin" asp-controller="user" asp-action="create">Thêm mới</a></li>
                            <li><a asp-area="admin" asp-controller="user" asp-action="index">Danh sách</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div id="wp-content">
                @RenderBody()
            </div>
        </div>


    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/admin/js/app.js"></script>
    <script src="~/admin/js/editor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>