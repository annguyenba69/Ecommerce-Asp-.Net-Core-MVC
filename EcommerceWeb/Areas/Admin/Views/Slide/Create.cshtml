@model Slide;
<div id="content" class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Thêm ảnh Slide
                </div>
                <div class="card-body">
                    <form asp-area="admin" asp-controller="slide" asp-action="create" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Link"></label>
                            <input class="form-control" type="text" asp-for="Link">
                            <span class="text-danger" asp-validation-for="Link"></span>
                        </div>
                        <div class="form-group">
                            <label for="name">Thêm ảnh</label>
                            <input type="file" name="file" >
                        </div>
                        <div class="form-group form-check">
                            <label asp-for="Status"></label>
                            <input class="form-check-input ml-3" asp-for="Status">
                            <span class="text-danger" asp-validation-for="Status"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>